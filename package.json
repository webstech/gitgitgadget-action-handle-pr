{
  "name": "gitgitgadget-action-handle-pr",
  "version": "0.5.0",
  "private": false,
  "description": "Action to support workflows using the gitgitgadget tooling",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/pullRequest.ts -t -d -o dist",
    "compile": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test:push": "cmd /c test\\pullRequestTest.cmd push",
    "test:comment": "cmd /c test\\pullRequestTest.cmd comment",
    "build:readme": "docker run -it --rm --name readme-gen -v %cd%:/usr/src/app -w /usr/src/app -e npm_package_version=%npm_package_version% node:latest npx --yes --trace-warnings github-action-readme-generator"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gitgitgadget/gitgitgadget-action-handle-pr.git"
  },
  "keywords": [
    "gitgitgadget",
    "workflow",
    "action"
  ],
  "author": "Chris. Webster",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gitgitgadget/gitgitgadget-action-handle-pr/issues"
  },
  "homepage": "https://github.com/gitgitgadget/gitgitgadget-action-handle-pr#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "find-git-exec": "^0.0.4"
  },
  "devDependencies": {
    "@types/node": "^17.0.45",
    "@typescript-eslint/parser": "^5.48.1",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.31.0",
    "eslint-plugin-anti-trojan-source": "^1.1.1",
    "eslint-plugin-github": "^4.6.0",
    "gitgitgadget": "github:gitgitgadget/gitgitgadget",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.2",
    "typescript": "^4.9.4"
  }
}
